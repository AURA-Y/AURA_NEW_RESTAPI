# Server
PORT=3002
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=aura
DB_SSL=false

# Prisma Connection String
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aura

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AWS Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-northeast-2

# S3
AWS_ACCESS_KEY_ID_S3=your-s3-access-key-id
AWS_SECRET_ACCESS_KEY_S3=your-s3-secret-access-key
AURA_S3_BUCKET=aura-raw-data-bucket

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_AUTH_REDIRECT_URI=http://localhost:3002/restapi/auth/google/callback

# ============================================
# GitHub App Integration
# ============================================

# 개발 환경 설정 (USE_SECRETS_MANAGER=false)
USE_SECRETS_MANAGER=false
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...(base64 content)...\n-----END RSA PRIVATE KEY-----"
ENCRYPTION_KEY=your-64-character-hex-encryption-key

# AWS Secrets Manager (프로덕션 환경에서 USE_SECRETS_MANAGER=true로 설정)
AWS_SECRETS_NAME=aura/github-app-secret

